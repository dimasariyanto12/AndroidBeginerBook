<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#fffff1ab"
    tools:context=".MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Halaman 1"
        android:id="@+id/btnhal1"
        android:paddingBottom="2dp"
        android:background="#ff28fa" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Halaman 2"
        android:id="@+id/btnhal2"
        android:paddingBottom="2dp"
        android:background="#728fea" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Halaman 3"
        android:id="@+id/btnhal3"
        android:paddingBottom="2dp"
        android:background="#ffcda5ff" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Halaman 4"
        android:id="@+id/btnhal4"
        android:paddingBottom="2dp"
        android:background="#ff88ff4b" />

</LinearLayout>