<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a09multiscreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Halaman1" android:label="Halaman 1" android:screenOrientation="portrait"/>
        <activity android:name=".Halaman2" android:label="Halaman 2" android:screenOrientation="portrait"/>
        <activity android:name=".Halaman3" android:label="Halaman 3" android:screenOrientation="portrait"/>
        <activity android:name=".Halaman4" android:label="Halaman 4" android:screenOrientation="portrait"/>
    </application>

</manifest>